<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>0.8.0.1</Version>
    <Company>ByronAP</Company>
    <Authors>ByronAP</Authors>
    <Copyright>Â© 2008-2022 ByronAP</Copyright>
    <Description>.NET Cross Platform WebSocket Client</Description>
    <Summary>.NET Cross Platform WebSocket Client</Summary>
    <Title>ByronAP WebSocket Client</Title>
    <PackageProjectUrl>https://github.com/ByronAP/websockets</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ByronAP/websockets</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>.NET,WebSocket,Client,Portable,netstandard</PackageTags>
    <PackageIcon>logo.png</PackageIcon>
    <PackageIconUrl>https://raw.githubusercontent.com/ByronAP/websockets/main/logo.png</PackageIconUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>0.8.0.1</AssemblyVersion>
    <FileVersion>0.8.0.1</FileVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
